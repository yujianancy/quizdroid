<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.yujia1.quizdroid.Answer">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/yourAnswer"
        android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/correctAnswer"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_below="@+id/yourAnswer"
            android:layout_centerHorizontal="true"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/counter"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_below="@+id/correctAnswer" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/next"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />



</RelativeLayout>
